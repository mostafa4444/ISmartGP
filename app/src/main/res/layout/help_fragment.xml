<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:gravity="center|top"
        android:textColor="@color/text"
        android:text="Welcome in help center and Support" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_margin="@dimen/_8sdp"
        android:textColor="@color/text"
        android:text="Please describe your problem that you face while using iHome application"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:gravity="top"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_16sdp"
        android:maxLines="5"
        android:textColorHint="@color/text"
        android:textColor="@color/text"
        android:hint="Please Enter Your Problem Here"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/problem_editText"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/text"
        android:layout_margin="@dimen/_8sdp"
        android:textSize="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:text="Please note that we will replay in maximum 48 hours"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:id="@+id/submit_problem"
        android:textColor="@color/white"
        android:text="SUBMIT YOUR PROBLEM"
        android:background="@color/text"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/text"
        android:text="Or send to us by GMAIL "
        android:layout_marginTop="@dimen/_12sdp"/>

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:src="@drawable/gmail"
        android:id="@+id/open_gmail_to_send"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="@dimen/_40sdp" />



</LinearLayout>

</ScrollView>