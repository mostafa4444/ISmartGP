<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="Number Of Detected Action"
        android:textColor="@color/text"
        />
    <RadioGroup
        android:id="@+id/action_group_radio"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/choose_one_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="@dimen/_12sdp"
            android:text="Detect Only One Action" />

        <RadioButton
            android:id="@+id/choose_three_action"
            android:textColor="@color/text"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content"
            android:text="Detect Three Action" />

        <RadioButton
            android:id="@+id/choose_none_action"
            android:layout_width="wrap_content"
            android:textColor="@color/text"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content"
            android:text="Never Detect Any Action" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/text" />


</LinearLayout>